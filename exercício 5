        var valores = [];

            for (var i = 0; i < 6; i++) {
        var valor = parseFloat(prompt("Digite o " + (i + 1) + " valor:"));
            valores.push(valor); 
        }
        var soma = 0;
            for (var i = 0; i < valores.length; i++) {
            soma += valores[i];
        }
        var media = soma / valores.length;
            alert("Números informados: " + valores.join(", "));
            alert("Média aritmética: " + media.toFixed(2)); 
